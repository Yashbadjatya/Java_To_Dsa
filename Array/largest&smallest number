//import java.util.*;

public class largestnumber {

    public static int Getlargestnumber(int numbers[]){
        int Largest = Integer.MIN_VALUE;
        int smallest = Integer.MAX_VALUE;
        for (int i=0; i<numbers.length; i++){
            
            if (Largest < numbers[i]) {
                Largest = numbers[i];
            }
            if (smallest> numbers[i]){
                smallest = numbers[i];
            }
            
        }
        System.out.println("smallest number amoung them is : " + smallest);
        return Largest;
    }

    public static void main(String[] args) {
        
        int numbers [] = {1,3,5,7,9,50,0};
        System.out.print("Largest number amoung them is : " + Getlargestnumber(numbers));
    }
}
