import java.util.*;

public class forloop {
    public static void main(String args[]) {
        Scanner sc = new Scanner(System.in);
        System.out.println("enter the number you want to reverse");
        int n = sc.nextInt();

        while (n > 0) {
            int lastdigit = n % 10;
            System.out.print(lastdigit + " ");
            n = n / 10;
        }
        System.out.println();

    }
}
